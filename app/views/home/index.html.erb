	<div id="headerwrap" style="background: url(<%= asset_path @personal_info.image %>) no-repeat center top;">
		<div class="container">
			<div class="row centered">
				<div class="col-lg-12">
					<h1><%= @personal_info.name %></h1>
					<h3><%= @personal_info.tagline%></h3>
				</div><!--/.col-lg-12 -->
			</div><!--/.row -->
		</div><!--/.container -->
	</div><!--/.#headerwrap -->

		<section id="about" name="about"></section>
	<div id="intro">
		<div class="container">
			<div class="row">
				
				<div class="col-lg-2 col-lg-offset-1">
					<h5>ABOUT</h5>
				</div>
				<div class="col-lg-6">
					<p><%= @personal_info.about%></p>
				</div>
				<div class="col-lg-3">
					<p><a href="#"><i class="icon-file"></i></a> <sm>DOWNLOAD PDF</sm></p>
				</div>
				
			</div><!--/.row -->
		</div><!--/.container -->
	</div><!--/ #intro -->

		<div class="container desc">
		<% @jobs.each_with_index do |try, index|%>
		<div class="row">
				<div class="col-lg-2 col-lg-offset-1">
					<% if index == 0%>
					<h5>WORK</h5>
					<% end %>
				</div>
				
				<div class="col-lg-6">
					<p><t><%= try.position %></t><br/>
						<% try.company %><br/>
					</p>
					<p><more><%= try.description %></more></p>
				</div>
				<div class="col-lg-3">
					<p><sm>AUGUST 2012 - CURRENT</sm></p>
				</div>
				
		</div><!--/.row -->
		<% end %>
		<br>
	</div><!--/.container -->

	<!--FOOTER DESCRIPTION -->
	<div id="footwrap">
		<div class="container">
			<div class="row">
			
				<div class="col-lg-2 col-lg-offset-1">
					<h5>CONTACT</h5>
				</div>
				<div class="col-lg-6">
					<p><t>Email</t><br/>
						<% if @personal_info.email!='' %><%= @personal_info.email %><br/><%end%>
					</p>
					<p><t>Adress</t><br/>
						<% if @personal_info.address1!='' %><%= @personal_info.address1 %><br/><%end%>
						<% if @personal_info.address2!='' %><%= @personal_info.address2 %><br/><%end%>
						<%= @personal_info.suburb + ' ' + @personal_info.postcode %><br/>
						<% if @personal_info.country!='' %><%= @personal_info.country %><br/><%end%>
					</p>
					<p><t>Phone</t><br/>
						<%= @personal_info.phone%> <br/>
					</p>
				</div>
				<div class="col-lg-3">
					<p><sm>SOCIAL LINKS</sm></p>
					<p>
						<a href="http://<%= @personal_info.sociallink %>"<i class="fa fa-google-plus"></i></a>

					</p>
				</div>
			</div><!--/.row -->
		</div><!--/.container -->
	</div><!--/ #footer -->

	<div id="c">
		<div class="container">
			<p>Created by <a href="http://www.asmpgame.blogspot.com">Me</a></p>
		
		</div>
	</div>
