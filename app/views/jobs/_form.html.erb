<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :position, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :company, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :description, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :startdate, input_html: { class: 'form-control'} %>
  </div>
  <div class="form-group">
    <%= f.input :enddate, input_html: { class: 'form-control'} %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>
